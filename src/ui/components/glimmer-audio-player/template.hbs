<div class="wrapper layout-horizontal">

  <svg style="display:none">
    <defs>
      <g id="error-outline"><path d="M11 15h2v2h-2zm0-8h2v6h-2zm.99-5C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/></g>
      <g id="play-arrow"><path d="M8 5v14l11-7z"/></g>
      <g id="replay"><path d="M12 5V1L7 6l5 5V7c3.31 0 6 2.69 6 6s-2.69 6-6 6-6-2.69-6-6H4c0 4.42 3.58 8 8 8s8-3.58 8-8-3.58-8-8-8z"/></g>
      <g id="pause"><path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/></g>
    </defs>
  </svg>

  <div class="left self-start">
    <div class="icon-container">
      <svg viewBox="0 0 24 24" preserveAspectRatio="xMidYMid meet" width="100%" height="100%">
        <use href="#play-arrow" />
      </svg>
    </div>
  </div>

  <div class="center flex">
    <div class="title fit" role="alert">{{title}}</div>
    <div class="progress fit" style={{progressStyle}}></div>
    <div class="progress2 fit" style={{progressWhiteStyle}}>
      <div class="title2" style={{titleStyle}} aria-hidden="true">{{title}}</div>
    </div>
  </div>

  <div class="right self-end">
    <div class="duration fit">
      <span class="fit" role="timer" aria-label="Audio Track Length">{{time}}</span>
    </div>
  </div>

</div>
